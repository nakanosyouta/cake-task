<div>
  <h1>会員情報編集</h1>
  <%= form_with model: @customer,url: admin_customer_path(@customer.id) do |f| %>
  <div>
    <%= f.label :last_name,"名前(性)" %><br />
    <%= f.text_field :last_name, autocomplete: "last_name" %>
  </div>

  <div>
    <%= f.label :first_name,"名前(名)" %><br />
    <%= f.text_field :first_name, autocomplete: "first_name" %>
  </div>

  <div>
    <%= f.label :last_name_kana,"フリガナ(セイ)" %><br />
    <%= f.text_field :last_name_kana, autocomplete: "last_name_kana" %>
  </div>

  <div>
    <%= f.label :first_name_kana,"フリガナ(メイ)" %><br />
    <%= f.text_field :first_name_kana, autocomplete: "first_name_kana" %>
  </div>

  <div>
    <%= f.label :email,"メールアドレス" %><br />
    <%= f.email_field :email, autocomplete: "email" %>
  </div>

  <div>
    <%= f.label :postal_code,"郵便番号(ハイフンなし)" %><br />
    <%= f.text_field :postal_code, autocomplete: "postal_code" %>
  </div>

  <div>
    <%= f.label :addess,"住所" %><br />
    <%= f.text_field :addess, autocomplete: "addess" %>
  </div>

  <div>
    <%= f.label :telephone_number,"電話番号(ハイフンなし)" %><br />
    <%= f.text_field :telephone_number, autocomplete: "telephone_number" %>
  </div>
  
  <div>
    <%= f.radio_button :is_deleted, true %> 退会
    <%= f.radio_button :is_deleted, false %> 有効
  </div>
  
  
  <%= f.submit '変更保存' %>
  
  <% end %>
</div>