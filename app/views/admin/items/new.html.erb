<div>
  <h1>商品新規登録</h1>

<%= form_with model: @item,url: admin_items_path do |f| %>
    <%= f.radio_button :is_active, 1 %>
    <%= f.radio_button :is_active, 0 %>
    <h4>商品画像</h4>

    <h4>商品名</h4>
     <%= f.text_field :name %>
    <h4>商品説明</h4>
     <%= f.text_area :introduction %>
    <h4>税抜価格</h4>
     <%= f.text_field :porice %>

    <%= f.submit '新規登録' %>
  <% end %>

</div>