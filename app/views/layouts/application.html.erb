<!DOCTYPE html>
<html>
  <head>
    <title>Task</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <ul>
        <li>
        <h1>LOGO</h1>
        </li>
        <% if customer_signed_in? %>

        <li>
          <%= link_to 'マイページ', my_page_path %>
        </li>
         <li>
          <%= link_to 'about', homes_about_path %>
        </li>
        <li>
          <%= link_to '商品一覧', items_path %>
        </li>
        <li>
          <%= link_to 'カート画面', cart_items_path %>
        </li>
        <li>
          <%= link_to 'ログイン',  new_admin_session_path %>
        </li>

        <li>
          <%= link_to 'ログアウト',  destroy_customer_session_path, method: :delete %>
        </li>
        <% elsif admin_signed_in? %>
        <li>
          <%= link_to '商品一覧', admin_items_path %>
        </li>

        <li>
          <%= link_to '顧客一覧', admin_customers_path %>
        </li>

        <li>
          <%= link_to '注文履歴一覧', admin_orders_path %>
        </li>

        <li>
          <%= link_to 'ログアウト', destroy_admin_session_path, method: :delete %>
        </li>
        <% else %>

        <li>
          <%= link_to 'about', homes_about_path %>
        </li>
        <li>
          <%= link_to '商品一覧', items_path %>
        </li>

        <li>
          <%= link_to 'ログイン', customer_session_path %>
        </li>

         <li>
          <%= link_to '新規登録', new_customer_registration_path %>
        </li>

        <% end %>
      </ul>
    <%= yield %>
  </body>
</html>
